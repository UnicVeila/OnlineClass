<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="130dip" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="130dip"
        android:background="@color/white"
        android:baselineAligned="false"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingBottom="10dip"
        android:paddingTop="10dip" >

        <LinearLayout
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/nav_item_magin_left"
            android:layout_weight="3"
            android:gravity="center_vertical"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/icon"
                android:layout_width="90dip"
                android:layout_height="90dip"
                android:scaleType="fitXY"
                android:src="@drawable/game_default" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/nav_item_magin_left"
                android:gravity="bottom"
                android:orientation="vertical"
                android:paddingBottom="5dip"
                android:paddingLeft="5dip" >

                <TextView
                    android:id="@+id/tv_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="斗地主"
                    android:textColor="@color/base_text_color"
                    android:textSize="@dimen/text_h1" />

                <TextView
                    android:id="@+id/tv_rank1_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="Tom"
                    android:textColor="@color/base_text_color"
                    android:textSize="@dimen/text_h3" />

                <TextView
                    android:id="@+id/tv_rank2_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="Jack"
                    android:textColor="@color/base_text_color"
                    android:textSize="@dimen/text_h3" />

                <TextView
                    android:id="@+id/tv_rank3_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="Nick"
                    android:textColor="@color/base_text_color"
                    android:textSize="@dimen/text_h3" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/nav_item_magin_left"
            android:layout_weight="1.2"
            android:gravity="bottom|right"
            android:orientation="vertical"
            android:paddingBottom="5dip"
            android:paddingRight="10dip" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:gravity="center_vertical"
                android:singleLine="true"
                android:text="27568分"
                android:textColor="@color/base_text_color"
                android:textSize="@dimen/text_h3" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:singleLine="true"
                android:text="27567分"
                android:textColor="@color/base_text_color"
                android:textSize="@dimen/text_h3" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:singleLine="true"
                android:text="27566分"
                android:textColor="@color/base_text_color"
                android:textSize="@dimen/text_h3" />
        </LinearLayout>
    </LinearLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="2dip"
        android:layout_alignParentBottom="true"
        android:background="@color/button_bg_color" />

</RelativeLayout>